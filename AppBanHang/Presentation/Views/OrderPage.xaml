<Page
    x:Class="AppBanHang.Presentation.OrderPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:models="clr-namespace:AppBanHang.Models"
    mc:Ignorable="d">

    <Grid Background="White">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Search Bar -->
        <Grid Grid.Row="0" Padding="10" Background="#F5F5F5">
            <TextBox x:Name="SearchTextBox"
                     PlaceholderText="Tìm kiếm sản phẩm..."
                     TextChanged="SearchTextBox_TextChanged"
                     Padding="10"
                     BorderThickness="1"
                     BorderBrush="#ddd"
                     CornerRadius="4"/>
        </Grid>

        <!-- Product List -->
        <ListView x:Name="ProductListView"
                  Grid.Row="1"
                  Margin="10"
                  SelectionMode="None">

            <ListView.ItemTemplate>
                <DataTemplate x:DataType="models:Product">

                    <Grid Padding="10" Margin="0 5" BorderThickness="1" BorderBrush="#ddd" CornerRadius="4">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="80"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="120"/>
                        </Grid.ColumnDefinitions>

                        <!-- Ảnh sản phẩm -->
                        <Image Source="{Binding ImageUrl}"
                               Width="70" Height="70"
                               Stretch="UniformToFill"
                               />

                        <!-- Thông tin sản phẩm -->
                        <StackPanel Grid.Column="1" Margin="10 0">
                            <TextBlock Text="{Binding ProductName}"
                                       FontSize="18" FontWeight="SemiBold"/>
                            <TextBlock Text="{Binding PriceText}"
                                       Foreground="DarkRed" FontSize="16"/>
                            <TextBlock Text="{Binding StockText}"
                                       Foreground="Gray" FontSize="14"/>
                        </StackPanel>

                        <!-- Nút thêm vào giỏ hàng -->
                        <Button Grid.Column="2"
                                Content="+"
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center"
                                Click="AddToCart_Click"
                                Tag="{Binding Id}"
                                Background="#4CAF50"
                                Foreground="White"
                                FontSize="18"
                                Width="50"
                                Height="50"/>
                    </Grid>

                </DataTemplate>
            </ListView.ItemTemplate>

        </ListView>
    </Grid>
</Page>
