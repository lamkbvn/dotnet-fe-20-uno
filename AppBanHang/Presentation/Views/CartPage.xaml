<Page
    x:Class="AppBanHang.Presentation.CartPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:AppBanHang.Presentation"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:services="clr-namespace:AppBanHang.Services"
    mc:Ignorable="d"
    Background="White">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <TextBlock Grid.Row="0"
                   Text="Giỏ hàng"
                   Padding="15"
                   FontSize="24"
                   FontWeight="Bold"
                   Foreground="#333"/>

        <!-- Cart Items List -->
        <ListView x:Name="CartListView"
                  Grid.Row="1"
                  Margin="10"
                  SelectionMode="None">

            <ListView.ItemTemplate>
                <DataTemplate x:DataType="services:CartItem">

                    <Grid Padding="10" Margin="0 5" BorderThickness="1" BorderBrush="#ddd" CornerRadius="4">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="80"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <!-- Ảnh sản phẩm -->
                        <Image Source="{Binding Product.ImageUrl}"
                               Width="70" Height="70"
                               Stretch="UniformToFill"
                               />

                        <!-- Thông tin sản phẩm -->
                        <StackPanel Grid.Column="1" Margin="10 0" VerticalAlignment="Center">
                            <TextBlock Text="{Binding Product.ProductName}"
                                       FontSize="16" FontWeight="SemiBold"/>
                            <TextBlock Text="{Binding Product.PriceText}"
                                       Foreground="DarkRed" FontSize="14"/>
                        </StackPanel>

                        <!-- Số lượng -->
                        <StackPanel Grid.Column="2"
                                   Orientation="Horizontal"
                                   VerticalAlignment="Center"
                                   Margin="10 0">
                            <Button Content="-"
                                    Click="Decrease_Click"
                                    Tag="{Binding Product.Id}"
                                    Width="35" Height="35"
                                    Background="#FF9800"
                                    Foreground="White"/>
                            <TextBlock Text="{Binding Quantity}"
                                       Margin="10 0"
                                       VerticalAlignment="Center"
                                       FontSize="14"
                                       MinWidth="30"
                                       TextAlignment="Center"/>
                            <Button Content="+"
                                    Click="Increase_Click"
                                    Tag="{Binding Product.Id}"
                                    Width="35" Height="35"
                                    Background="#4CAF50"
                                    Foreground="White"/>
                        </StackPanel>

                        <!-- Xóa -->
                        <Button Grid.Column="3"
                                Content="🗑️"
                                Click="Remove_Click"
                                Tag="{Binding Product.Id}"
                                Margin="5"
                                VerticalAlignment="Center"
                                Width="40" Height="40"
                                Background="#f44336"
                                Foreground="White"/>
                    </Grid>

                </DataTemplate>
            </ListView.ItemTemplate>

        </ListView>

        <!-- Empty Cart Message -->
        <StackPanel x:Name="EmptyCartPanel"
                    Grid.Row="1"
                    VerticalAlignment="Center"
                    HorizontalAlignment="Center">
            <TextBlock Text="📦"
                       FontSize="60"
                       TextAlignment="Center"/>
            <TextBlock Text="Giỏ hàng trống"
                       FontSize="20"
                       TextAlignment="Center"
                       Margin="0 10"
                       Foreground="Gray"/>
        </StackPanel>

        <!-- Footer - Total -->
        <Grid Grid.Row="2"
              Padding="15"
              Background="#F5F5F5"
              BorderThickness="0,1,0,0"
              BorderBrush="#ddd">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <TextBlock Text="{Binding TotalText, Mode=OneWay}"
                       FontSize="18"
                       FontWeight="Bold"
                       Foreground="#333"/>

            <Button Grid.Column="1"
                    Content="Thanh toán"
                    Click="Checkout_Click"
                    Background="#2196F3"
                    Foreground="White"
                    Padding="20 10"
                    FontSize="14"
                    FontWeight="SemiBold"/>
        </Grid>
    </Grid>
</Page>
